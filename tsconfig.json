{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@fuse/*": [
        "./src/@fuse/*"
      ],
      "@history*": [
        "./src/@history"
      ],
      "@lodash": [
        "./src/@lodash"
      ],
      "@mock-api/*": [
        "./src/@mock-api/*"
      ],
      "@schema": [
        "./src/@schema"
      ],
      "app/store": [
        "./src/app/store/index"
      ],
      "app/store/*": [
        "./src/app/store/*"
      ],
      "src/shared-components/*": [
        "./src/shared-components/*"
      ],
      "app/configs/*": [
        "./src/app/configs/*"
      ],
      "app/theme-layouts/*": [
        "./src/app/theme-layouts/*"
      ],
      "app/AppContext": [
        "./src/app/AppContext"
      ]
    },
    "declaration": true,
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es2020",
      "scripthost"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs",
    "build/types/**/*.ts"
  ]
}
